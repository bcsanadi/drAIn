# Copy this file to .env and fill in your actual values
# The .env file will be ignored by Git and won't be uploaded to GitHub

# OpenAI API Key for the chatbot functionality
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Flask Secret Key (generate a random string for security)
# You can generate one using: python -c "import secrets; print(secrets.token_hex(16))"
FLASK_SECRET_KEY=your_random_secret_key_here

# Database URL (optional, defaults to local SQLite)
# DATABASE_URL=sqlite:///users.db

# Flask Environment (development/production)
# FLASK_ENV=development

# Flask Debug Mode (True/False)
# FLASK_DEBUG=True
